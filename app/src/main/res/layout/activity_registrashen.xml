<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/grad"
    tools:context=".Registrashen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/green"
            android:text="Регистрация"
            android:textSize="35dp"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:id="@+id/regFIO"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="Укажите ваше ФИО"
            android:background="@drawable/rounded_edit_text"
            android:textSize="25dp"
            android:inputType="text" />

        <EditText
            android:id="@+id/regEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="Укажите электронную почту"
            android:background="@drawable/rounded_edit_text"
            android:textSize="25dp"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/regPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="Придумайте пароль"
            android:background="@drawable/rounded_edit_text"
            android:textSize="25dp"
            android:inputType="numberPassword" />

        <Button
            android:id="@+id/regButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:textSize="25dp"
            android:background="@drawable/radius_button"
            app:backgroundTint="@null"
            android:text="Зарегистрироваться" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/green"
            android:text="Уже авторизованы?"
            android:textSize="25dp"
            android:gravity="center"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/avt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/blue"
            android:layout_marginVertical="10dp"
            android:text="Пройдите авторизацию"
            android:textSize="25dp"
            android:gravity="center"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>